<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SuGarToolkit.WPF.Controls.Dialogs">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SuGarToolkit.WPF.Controls.Dialogs;component/MessageBoxHeader/MessageBoxHeader_themeresources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:MessageBoxHeader}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MessageBoxHeader}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid
                                x:Name="StandardIconArea"
                                Grid.Column="0"
                                Margin="{StaticResource MessageBoxHeaderIconMargin}"
                                VerticalAlignment="Center">
                                <Image
                                    x:Name="MessageBoxIconImage"
                                    Height="24"
                                    Source="/SuGarToolkit.WPF.Controls.Dialogs;component/Resources/MessageBoxIcon.Information.png" />
                            </Grid>

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Text}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Icon" Value="Information" />
                        <Trigger Property="Icon" Value="Question">
                            <Setter TargetName="MessageBoxIconImage" Property="Source" Value="/SuGarToolkit.WPF.Controls.Dialogs;component/Resources/MessageBoxIcon.Question.png" />
                        </Trigger>
                        <Trigger Property="Icon" Value="Error">
                            <Setter TargetName="MessageBoxIconImage" Property="Source" Value="/SuGarToolkit.WPF.Controls.Dialogs;component/Resources/MessageBoxIcon.Error.png" />
                        </Trigger>
                        <Trigger Property="Icon" Value="Warning">
                            <Setter TargetName="MessageBoxIconImage" Property="Source" Value="/SuGarToolkit.WPF.Controls.Dialogs;component/Resources/MessageBoxIcon.Warning.png" />
                        </Trigger>
                        <Trigger Property="Icon" Value="Success">
                            <Setter TargetName="MessageBoxIconImage" Property="Source" Value="/SuGarToolkit.WPF.Controls.Dialogs;component/Resources/MessageBoxIcon.Success.png" />
                        </Trigger>
                        <Trigger Property="Icon" Value="None">
                            <Setter TargetName="StandardIconArea" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
