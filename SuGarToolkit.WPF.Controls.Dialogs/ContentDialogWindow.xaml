<Window
    x:Class="SuGarToolkit.WPF.Controls.Dialogs.ContentDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuGarToolkit.WPF.Controls.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ContentDialogWindow"
    d:DataContext="{d:DesignInstance local:ContentDialogWindow}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">

    <!--<WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" NonClientFrameEdges="Left,Right,Bottom" />
    </WindowChrome.WindowChrome>-->

    <local:ContentDialogContent
        x:Name="content"
        CloseButtonClick="OnCloseButtonClick"
        Foreground="{Binding Foreground}"
        Loaded="Content_Loaded"
        PrimaryButtonClick="OnPrimaryButtonClick"
        SecondaryButtonClick="OnSecondaryButtonClick" />

</Window>
